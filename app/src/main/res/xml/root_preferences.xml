<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/messages_header">

        <EditTextPreference
            app:key="@string/weather_city"
            app:title="@string/city_title"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:defaultValue="metric"
            app:entries="@array/weather_entries"
            app:entryValues="@array/weather_values"
            app:key="@string/weather_system"
            app:title="@string/weather_system_title"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

</PreferenceScreen>
